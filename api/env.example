# YourRightPocket API Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Secret (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here

# Railway MySQL Database Configuration
# These will be automatically set by Railway when you add a MySQL service
RAILWAY_TCP_PROXY_DOMAIN=
RAILWAY_TCP_PROXY_PORT=
DB_HOST=
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=railway

# Every.org API Configuration (for nonprofit data)
EVERY_ORG_API_KEY=your_every_org_api_key

# Plaid Configuration (for bank account integration)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Stripe Configuration (for payment processing)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourrightpocket.com

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com
